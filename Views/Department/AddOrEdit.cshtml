@model DepartmentPosition;

<div class="modal fade" id="addOrEditModal" role="dialog" aria-labelledby="addOrEditModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h3 class="modal-title" id="addOrEditModalLabel">Phòng ban</h3>
            </div>
            <div class="modal-body">
                <div id="message" class="mt-3"></div>
                <form id="createForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" id="id" />
                    <div class="form-group">
                        <label asp-for="Code" class="control-label">Mã phòng ban</label>
                        <input asp-for="Code" class="form-control" id="code" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Tên phòng ban</label>
                        <input asp-for="Name" class="form-control" id="name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Department.save()">Lưu</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="Department.resetForm()">Đóng</button>
            </div>
        </div>
    </div>
</div>