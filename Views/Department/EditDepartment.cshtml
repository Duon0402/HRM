@model DepartmentPosition

<div class="modal fade" id="editModal" role="dialog" aria-labelledby="editModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h3 class="modal-title" id="editModalLabel">Chỉnh sửa phòng ban</h3>
            </div>
            <div class="modal-body">
                <div id="editMessage" class="mt-3"></div>
                <form id="editForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" id="editId" />
                    <div class="form-group">
                        <label asp-for="Code" class="control-label">Mã phòng ban</label>
                        <input asp-for="Code" class="form-control" id="editCode" readonly/>
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label" >Tên phòng ban</label>
                        <input asp-for="Name" class="form-control" id="editName" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreateBy" class="control-label">Người tạo</label>
                        <input asp-for="CreateBy" class="form-control" id="editCreateBy" />
                        <span asp-validation-for="CreateBy" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSave">Lưu</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<script>
    function openEditModal(id, code, name, createBy) {
        $('#editModal #editId').val(id);
        $('#editModal #editCode').val(code);
        $('#editModal #editName').val(name);
        $('#editModal #editCreateBy').val(createBy);
        $('#editModal').modal('show');
    }
    $('#btnSave').click(function () {
        var departmentData = {
            Id: $('#editModal #editId').val(),
            Code: $('#editModal #editCode').val(),
            Type: "Phòng ban",
            Name: $('#editModal #editName').val(),
            CreateBy: $('#editModal #editCreateBy').val(),
        };
        $.ajax({
            url: '/DepartPosit/Edit/' + departmentData.Id,
            type: 'POST',
            data: departmentData,
            success: function (res) {
                if (res.success) {
                    $('#editModal').modal('hide');
                    location.reload();
                }
                else {
                    $('#editMessage').html('<div class="alert alert-danger">' + res.message + '</div>');
                }
            },
            error: function (res) {
                $('#editMessage').html('<div class="alert alert-danger">' + 'Đã xảy ra lỗi' + '</div>');
                console.log(res);
            }
        });
    });
</script>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
