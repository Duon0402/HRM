@model EmpSalary
<div class="modal fade" id="addOrEditModal" role="dialog" aria-labelledby="addOrEditModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h3 class="modal-title" id="addOrEditModalLabel">Lương</h3>
            </div>
            <div class="modal-body">
                <div id="message" class="mt-3"></div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form id="editForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" id="id" />
                    <div class="form-group">
                        <label asp-for="EmployeeId" class="control-label">Mã nhân viên</label>
                        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmpCodeList" id="empId">
                            <option value="">-- Chọn mã nhân viên --</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Salary" class="control-label">Tiền lương</label>
                        <input asp-for="Salary" class="form-control" id="salary" />
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label">Ngày bắt đầu</label>
                        <input asp-for="StartDate" class="form-control" type="date" id="startDate" placeholder="dd/MM/yyyy" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label">Ngày kết thúc</label>
                        <input asp-for="EndDate" class="form-control" type="date" id="endDate" placeholder="dd/MM/yyyy" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="CreateBy" class="control-label">Người tạo</label>
                        <input asp-for="CreateBy" class="form-control" id="createBy" />
                        <span asp-validation-for="CreateBy" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSave" onclick="save()" >Lưu</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnClose">Đóng</button>
            </div>
        </div>
    </div>
</div>


<script>
    function openAddOrEditModal(id) {
        if (id === undefined || id === null) {
            $('#id').val('');
            $('#empId').val('');
            $('#salary').val('');
            $('#createBy').val('');
            $('#startDate').val('');
            $('#endDate').val('');
            $('#addOrEditModal').modal('show');
        }
        else {
            $.ajax({
                url: '/EmpSalary/GetById/' + id,
                type: 'GET',
                data: {},
                success: function (res) {
                    if (res.success) {
                        console.log(res);
                        $('#id').val(res.data.id);
                        $('#empId').val(res.data.employeeId);
                        $('#salary').val(res.data.salary);
                        let startDate = new Date(res.data.startDate);
                        startDate.setHours(startDate.getHours() + 7);
                        $('#startDate').val(startDate.toISOString().split('T')[0]);
                        let endDate = new Date(res.data.endDate);
                        endDate.setHours(endDate.getHours() + 7);
                        $('#endDate').val(endDate.toISOString().split('T')[0]);
                        $('#createBy').val(res.data.createBy);
                        $('#message').html('');
                        $('#addOrEditModal').modal('show');
                    }
                    else {
                        console.log(res);
                    }
                },
                error: function(res) {
                    console.log(res);
                }
            })
        }
    }

    $('#btnClose').click(function () {
        $('#message').html('');
        $('#addOrEditModal').modal('hide');
    });

    function save() {
        var id = $('#id').val();
        if (id === undefined || id === null || id == '') {
            add();
        } else {
            edit(id);
        }
    }

    function add() {
        var data = {
            EmployeeId: $('#empId').val(),
            Salary: $('#salary').val(),
            StartDate: $('#startDate').val(),
            EndDate: $('#endDate').val(),
            CreateBy: $('#createBy').val()
        };

        $.ajax({
            url: '/EmpSalary/Create',
            type: 'POST',
            data: data,
            success: function (res) {
                if (res.success) {
                    $('#addOrEditModal').modal('hide');
                    location.reload();
                } else {
                    $('#message').html('<div class="alert alert-danger">' + res.message + '</div>');
                    console.log(res);
                }
            },
            error: function (res) {
                $('#message').html('<div class="alert alert-danger">' + 'Đã xảy ra lỗi' + '</div>');
                console.log(res);
            }
        });
    }

    function edit(id) {
        var data = {
            EmployeeId: $('#empId').val(),
            Salary: $('#salary').val(),
            StartDate: $('#startDate').val(),
            EndDate: $('#endDate').val(),
            CreateBy: $('#createBy').val()
        };

        $.ajax({
            url: '/EmpSalary/Edit/' + id,
            type: 'POST',
            data: data,
            success: function (res) {
                if (res.success) {
                    $('#addOrEditModal').modal('hide');
                    location.reload();
                } else {
                    $('#message').html('<div class="alert alert-danger">' + res.message + '</div>');
                    console.log(res);
                }
            },
            error: function (res) {
                $('#message').html('<div class="alert alert-danger">' + 'Đã xảy ra lỗi' + '</div>');
                console.log(res);
            }
        });
    }

</script>
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}