@model HRM.Data.ViewModels.EmployeeVM

<div class="modal fade" id="detailModal" role="dialog" aria-labelledby="detailModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h3 class="modal-title" id="detailModalLabel">Chỉnh sửa nhân viên</h3>
            </div>
            <div class="modal-body">
                <div id="createMessage" class="mt-3"></div>
                <form id="createForm" class="row">
                    <div class="col">
                        <input type="hidden" asp-for="Employee.Id" id="detailId" />
                        <div class="form-group">
                            <label asp-for="Employee.Code" class="control-label">Mã nhân viên</label>
                            <input asp-for="Employee.Code" class="form-control" id="detailCode" readonly />
                            <span asp-validation-for="Employee.Code" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.Name" class="control-label">Tên nhân viên</label>
                            <input asp-for="Employee.Name" class="form-control" id="detailName" readonly />
                            <span asp-validation-for="Employee.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.DepartmentId" class="control-label">Phòng ban</label>
                            <select asp-for="Employee.DepartmentId" class="form-control" asp-items="ViewBag.DepartmentName" id="detailDepartmentId" readonly>
                            </select>
                            <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.PositionId" class="control-label">Chức vụ</label>
                            <select asp-for="Employee.PositionId" class="form-control" asp-items="ViewBag.PositionName" id="detailPositionId" readonly>
                            </select>
                            <span asp-validation-for="Employee.PositionId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.DateOfBirth" class="control-label">Ngày sinh</label>
                            <input asp-for="Employee.DateOfBirth" class="form-control" type="text" id="detailDateOfBirth" readonly />
                            <span asp-validation-for="Employee.DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.Gender" class="control-label">Giới tính</label>
                            <select asp-for="Employee.Gender" class="form-control" id="detailGender" readonly>
                                <option value="">-- Chọn giới tính --</option>
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            </select>
                            <span asp-validation-for="Employee.Gender" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Employee.PhoneNumber" class="control-label">Điện thoại</label>
                            <input asp-for="Employee.PhoneNumber" class="form-control" id="detailPhoneNumber" readonly />
                            <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.Email" class="control-label">Email</label>
                            <input asp-for="Employee.Email" class="form-control" id="detailEmail" readonly />
                            <span asp-validation-for="Employee.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.Address" class="control-label">Quê quán</label>
                            <input asp-for="Employee.Address" class="form-control" id="detailAddress" readonly />
                            <span asp-validation-for="Employee.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.Identifier" class="control-label">CCCD</label>
                            <input asp-for="Employee.Identifier" class="form-control" id="detailIdentifier" readonly />
                            <span asp-validation-for="Employee.Identifier" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.CreateBy" class="control-label">Người tạo</label>
                            <input asp-for="Employee.CreateBy" class="form-control" id="detailCreateBy" readonly />
                            <span asp-validation-for="Employee.CreateBy" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.CreateAt" class="control-label">Ngày tạo</label>
                            <input asp-for="Employee.CreateAt" class="form-control" id="detailCreateAt" type="text" readonly />
                            <span asp-validation-for="Employee.CreateAt" class="text-danger"></span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
<script>
    function openDetailModal(id, code, name, departmentId, positionId, dateOfBirth, gender, phoneNumber, email, address, identifier, createBy, createAt) {
        $('#detailId').val(id)
        $('#detailCode').val(code)
        $('#detailName').val(name)
        $('#detailDepartmentId').val(departmentId)
        $('#detailPositionId').val(positionId)
        $('#detailDateOfBirth').val(dateOfBirth)
        $('#detailGender').val(gender)
        $('#detailPhoneNumber').val(phoneNumber)
        $('#detailEmail').val(email)
        $('#detailAddress').val(address)
        $('#detailIdentifier').val(identifier)
        $('#detailCreateBy').val(createBy)
        $('#detailCreateAt').val(createAt)
        console.log(dateOfBirth);
    }
</script>