@model DepartmentPosition

<div class="modal fade" id="detailModal" role="dialog" aria-labelledby="detailModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h3 class="modal-title" id="detailModalLabel">Chi tiết chức vụ</h3>
            </div>
            <div class="modal-body">
                <form id="detailForm">
                    <input type="hidden" asp-for="Id" id="detailId" />
                    <div class="form-group">
                        <label asp-for="Code" class="control-label">Mã chức vụ</label>
                        <input asp-for="Code" class="form-control" id="detailCode" readonly />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Tên chức vụ</label>
                        <input asp-for="Name" class="form-control" id="detailName" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreateBy" class="control-label">Người tạo</label>
                        <input asp-for="CreateBy" class="form-control" id="detailCreateBy" readonly />
                        <span asp-validation-for="CreateBy" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreateAt" class="control-label">Thời gian tạo</label>
                        <input type="text" asp-for="CreateAt" class="form-control" id="detailCreateAt" readonly />
                        <span asp-validation-for="CreateAt" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<script>
    function openDetailModal(id, code, name, createBy, createAt) {
        $('#detailModal #detailId').val(id);
        $('#detailModal #detailCode').val(code);
        $('#detailModal #detailName').val(name);
        $('#detailModal #detailCreateBy').val(createBy);
        $('#detailModal #detailCreateAt').val(createAt);
        $('#detailModal').modal('show');
    }
</script>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
