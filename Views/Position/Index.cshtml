@model HRM.Data.ViewModels.PositionVM

@{
    ViewData["Title"] = "Position";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Danh sách chức vụ</h1>

<button type="button" class="btn btn-success" data-toggle="modal" data-target="#createModal">Thêm mới</button>

<table class="table table-bordered mt-3">
    <thead>
        <tr class="table-secondary text-center">
            <th scope="col">Mã chức vụ</th>
            <th scope="col">Tên chức vụ</th>
            <th scope="col">Người tạo</th>
            <th scope="col">Thời gian tạo</th>
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Positions)
        {
            <tr>
                <td>@Html.DisplayFor(modalItem => item.Code)</td>
                <td>@Html.DisplayFor(modalItem => item.Name)</td>
                <td>@Html.DisplayFor(modalItem => item.CreateBy)</td>
                <td>@Html.DisplayFor(modalItem => item.CreateAt)</td>
                <td class="d-flex justify-content-center">
                    <button type="button" class="btn btn-primary mx-2"
                            onclick="openEditModal(@item.Id, '@item.Code', '@item.Name', '@item.CreateBy')"
                            data-toggle="modal"
                            data-target="#editModal">
                        Chỉnh sửa
                    </button>
                    <button type="button" class="btn btn-info mx-2" 
                            onclick="openDetailModal(@item.Id, '@item.Code', '@item.Name', '@item.CreateBy', '@item.CreateAt');"
                            data-toggle="modal" 
                            data-target="#detailModal">
                        Chi tiết
                    </button>
                    <button type="button" class="btn btn-danger mx-2"
                            onclick="openDeleteModal(@item.Id);"
                            data-toggle="modal"
                            data-target="#deleteModal"
                    >
                        Xóa
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    await Html.RenderPartialAsync("CreatePosition", Model.Position);
    await Html.RenderPartialAsync("EditPosition", Model.Position);
    await Html.RenderPartialAsync("DetailPosition", Model.Position);
    await Html.RenderPartialAsync("DeletePosition", Model.Position);
}